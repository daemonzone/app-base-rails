<% @services.each do | c | %>
	<li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" data-id="<%= c.id %>">
			<%= c.title %>
	    <span class="badge badge-pill">
			<div class="btn-group" role="group" aria-label="Azioni">
				<span class="btn btn-primary btn-sm" data-id="<%= c.id%>"  data-context="service" data-toggle="modal" data-target="#confirmation-modal"><em class="fa fa-trash"></em></span>
			</div>
			<div style="display: none;" id="modal_buttons_service_<%=c.id%>">
              <button type="button" data-dismiss="modal" class="swal2-cancel swal2-styled" aria-label="" style="display: inline-block; background-color: rgb(221, 221, 221);">Annulla</button>
              <%= button_to settings_service_path(c.id), :method => :delete, class: "swal2-confirm swal2-styled", style: "display: inline-block; background-color: rgb(48, 133, 214);" do |f| %>
                Conferma
              <% end %>
			</div>
	    </span>
    </li>
<% end %>
