<script type="text/javascript">
	// Fill modal with content from link href
	$("#details-modal").on("show.bs.modal", function(e) {
		
		var reqid = e.relatedTarget.dataset['id'];
		var title = e.relatedTarget.dataset['title'];
	    var link = $(e.relatedTarget);

	    $(this).find(".modal-title").text(title);
	    
	    var modal_body = $(this).find(".modal-body");
		modal_body.load(link.attr("href"), 
		    function (responseText, textStatus, XMLHttpRequest) {
		    	if (XMLHttpRequest.statusText == 'error')
		        	modal_body.html('<p>Errore di rete. Verifica la tua connessione a Internet.</p>');
			});
	});		
</script>
