<!-- other services -->
<section class="other_services py-5" id="services">
  <div class="container py-lg-5 py-3">
    <h3 class="heading mb-sm-3 mb-4">I Nostri Servizi </h3>
    <div class="row">

      <% @categories.each do | c | %>
        <div class="col-lg-4 col-md-6 mt-lg-3 mt-4">
          <div class="grid">
            <% if c.cover.attached? %>
              <%= link_to "/servizi/#{c.key}" do %>
              <img src="<%= url_for(c.cover) %>" alt="Casa/Ufficio" title="Casa/Ufficio" class="img-fluid full-width" />
              <%end %>
            <% end %>
            <div class="info p-4">
              <h4 class="">
                <%= link_to c.title, "/servizi/#{c.key}" %>
              </h4>
              <p class="mt-3"><%= c.descr %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
<!-- //other services -->

<%= render 'shared/testimonials' %>

