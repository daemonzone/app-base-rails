<h2 class="text-center m-5">Resend confirmation instructions?</h2>

<div class="col-8 offset-2 col-sm-6 offset-sm-3">

<%= form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control m-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary m-2' %>
  </div>
<% end %>
<hr>
<%= render "users/shared/links" %>
</div>