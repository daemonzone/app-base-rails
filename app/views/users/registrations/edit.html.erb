<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
      <div class="signin-form">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "base/error_messages", object: resource %>
          
          <h2 class="mb-4">Cambia la tua password</h2>

          <div class="form-group">
            <label class="ml-2">Nuova password
              <% if @minimum_password_length %>
                <small><em class="ml-4">(Lunghezza minima: <%= @minimum_password_length %>)</em></small>
              <% end %>
            </label>
            <%= f.password_field :password, autofocus: true, placeholder: "Nuova password", class: 'form-control m-2' %>
          </div>  

          <div class="form-group">
            <%= f.password_field :password_confirmation, placeholder: "Ripeti la nuova password", class: 'form-control m-2' %>
            <small><em class="ml-4"></em></small>
          </div>  

          <div class="form-group">
            <label class="ml-2">La tua password attuale
              <small><em class="ml-4">(usa la tua password attuale per confermare)</em></small>
            </label>
            <%= f.password_field :current_password, placeholder: "La tua password attuale", class: 'form-control m-2'  %>
          </div>  

          <div class="form-group text-right">
              <a href="<%= account_url %>" class="btn btn-secondary btn-md">Torna alla dashboard</a>
              <button type="submit" class="btn btn-primary btn-lg signin-btn">Cambia password</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
