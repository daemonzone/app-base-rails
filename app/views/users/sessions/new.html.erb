<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-7 mx-auto">
      <div class="signin-form">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <h3 class="mb-4 text-center"><img style="width: 50px;" src="/images/logo-only-avq-icon.png" alt="<%= siteinfo['site_company_name'].value %>" title="AVQ Professional Services"> Accedi al Portale AVQ</h3>
          <!--
          <p class="hint-text">Sign in with your social media account</p>
          <div class="social-btn text-center">
            <a href="#" class="btn btn-primary btn-lg" title="Facebook"><i class="fa fa-facebook"></i></a>
            <a href="#" class="btn btn-info btn-lg" title="Twitter"><i class="fa fa-twitter"></i></a>
            <a href="#" class="btn btn-danger btn-lg" title="Google"><i class="fa fa-google"></i></a>
          </div>
          <div class="or-seperator"><b>or</b></div>
          -->
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control input-lg', placeholder: "Indirizzo email", required: "required" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autofocus: true, autocomplete: "password", class: 'form-control input-lg', placeholder: "Password", required: "required" %>
          </div>  
          <div class="form-group">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class: 'input-lg' %>
                <%= f.label "Ricordami" %>
              </div>
            <% end %>
          </div>
          <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block signin-btn">Accedi</button>
          </div>
          <div class="text-center small"><a href="#"><%= link_to 'Hai dimenticato la password?', forgot_password_path %></div>
         <% end %>
        <div class="text-center small">Non hai un account? <%= link_to 'Registrati', new_user_registration_path %></div>
      </div>

    </div>
  </div>
</div>
