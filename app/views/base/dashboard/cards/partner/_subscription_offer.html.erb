<% if current_user.docsuploaded %>
  <% if current_user.subscription.nil? || current_user.subscription.subscription_type == 'basic' %>
  <div class="card mb-4">	
    <div class="card-header bg-offer text-white">
      <strong><em class="fa fa-certificate"></em> Abbonamenti AVQ Servizi</strong>
    </div>
    <div class="card-body text-center">
      <h4>
        <% if current_user.subscription.nil? %>
          Scegli subito il tuo abbonamento!
        <% end %>
        <% if !current_user.subscription.nil? && current_user.subscription.subscription_type == 'basic' && current_user.subscription_valid? %>
          Effettua subito l'upgrade del tuo abbonamento Basic
        <% end %>
        <% if !current_user.subscription.nil? && current_user.subscription_expired? %>
          <strong>Rinnova subito</strong> il tuo abbonamento!
        <% end %>
      </h4>

    	<div class="row mb-4">
    		<%= render 'base/dashboard/cards/shared/subscription_products' %>
    	</div>    

    </div>
  </div>
  <% end %>
<% end %>